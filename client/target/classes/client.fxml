<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="rootNode" alignment="CENTER" prefHeight="400.0" prefWidth="500.0" style="-fx-background-color: linear-gradient(#fff 0%, #eee 10%, #ddd 90%, #bbb 100%);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="client.MainController">
  <children>
    <HBox alignment="TOP_LEFT" prefHeight="-1.0" prefWidth="-1.0">
      <children>
        <TextField fx:id="tfFileName" alignment="CENTER_LEFT" prefWidth="-1.0" promptText="Укажите имя файла на сервере, который хотите скачать" HBox.hgrow="ALWAYS" />
        <Button onAction="#pressOnDownloadBtn" text="Скачать">
          <font>
            <Font name="System Italic" size="12.0" fx:id="x1" />
          </font>
        </Button>
        <Button font="$x1" onAction="#pressOnSendBtn" text="Отправить" />
      </children>
    </HBox>
    <HBox prefHeight="-1.0" prefWidth="-1.0">
      <children>
        <Text font="$x1" strokeType="OUTSIDE" strokeWidth="0.0" text="на пк" textAlignment="CENTER" wrappingWidth="250.0" />
        <Text font="$x1" strokeType="OUTSIDE" strokeWidth="0.0" text="в облоке" textAlignment="CENTER" wrappingWidth="250.0" />
      </children>
    </HBox>
    <HBox prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
        <ListView fx:id="filesList" prefHeight="-1.0" prefWidth="-1.0" />
        <ListView fx:id="filesServerList" prefHeight="-1.0" prefWidth="-1.0" />
      </children>
    </HBox>
  </children>
</VBox>
